.comments-section  
  - commentable.comments.each do |comment|
		.comment class='col-sm-12'
			.comment-body class='col-sm-11'
				= comment.body
			- if can?(:update, comment, user: current_user)
				.comment-controls class='col-sm-1 text-center'
					= link_to edit_comment_path(comment), remote: true, data: { toggle: 'modal', target: '#formModal' } do
						i.fa class='fa-paint-brush'
					|&nbsp;
					= link_to comment, method: :delete do
						i.fa class='fa-trash'
p.text-center
	= link_to 'Hide comments', '#'